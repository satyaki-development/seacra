{%- style -%}
    body {
      margin: 10;
      padding: 0;
      font-family: "Poppins";
      background: 00ee0e;
      box-sizing: border-box;
}

.cursor,
.cursor2 {
  position: fixed;
  border-radius: 50%;
  transform: translateX(-50%) translateY(-50%);
  pointer-events: none;
  left: -100px;
  top: 50%;
}

@media screen and (max-width: 1200px) {
  .cursor,
  .cursor2 {
    display: none;
  }
}
a {
  cursor: pointer;
  text-decoration: none;
}

/* #Sections and link
================================================== */

.section {
  position: relative;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  list-style: none;
  display: flex;
  background-color: #fff;
}

.section li {
  position: relative;
  /* width: 100%; */
  width:70%;
  height: 80vh;
  display: block;
  padding: 0;
  margin: 64px;
  /* margin-left: 100px;
  margin-right:100px; */
  /* top: 25px; */
  list-style: none;
  z-index: 3;
  background: rgba(217, 217, 217, 0.032);
  border: 1px solid #e7e7e7;
}

h2 {
  position: absolute;
  width: 458px;
  height: 88px;
  top: 34px;
  font-family: "Poppins";
  font-style: normal;
  font-weight: 600;
  font-size: 32px;
  line-height: 139%;
  text-align: center;
  color: #cc4e61;
  position: absolute;
  display: block;
  font-family: "Poppins", sans-serif;
  font-weight: 800;
  z-index: 1;
}
p {
  position: absolute;
  width: 432px;
  height: 81px;
  left: 40px;
  top: 158px;
  font-family: "Poppins";
  font-style: normal;
  font-weight: 400;
  font-size: 16px;
  line-height: 27px;
  color: #4a4a4a;
}
.section-link {
  position: absolute;
  text-align: center;
  font-size: 32px;
  font-weight: 600;
  top: 50%;
  left: 50%;
  color: #fff;
  z-index: 2;
  transform: translateX(-50%) translateY(-50%);
  -webkit-transition: all 0.3s ease-out;
  transition: all 0.3s ease-out;
}

/* text color  */

.section-link {
  color: pink;
}
.section-link.cyan {
  color: #1abc9c;
}
.section-link.red {
  color: #e74c3c;
}

/* blured effect */

.cursor2 {
  height: 36px;
  width: 36px;
  z-index: 99998;
  -webkit-transition: all 0.3s ease-out;
  transition: all 0.3s ease-out;
}
.cursor2 {
  border: none;
  background: rgba(255, 255, 255, 0.5);
  box-shadow: 0 0 14px rgba(255, 255, 255, 0.5);
  -webkit-transform: scale(4) translateX(-25%) translateY(-25%);
  transform: scale(4) translateX(-25%) translateY(-25%);
}
.color-cyan .cursor2 {
  border: none;
  background: rgba(46, 204, 113, 0.3);
  box-shadow: 0 0 14px rgba(46, 204, 113, 0.6);
}
.color-cyan .cursor2.hover {
  border: none;
  background: rgba(178, 222, 39, 0.1);
  box-shadow: 0 0 14px rgba(46, 204, 113, 0.6);
}
.color-red .cursor2 {
  border: none;
  background: rgba(231, 76, 60, 0.3);
  box-shadow: 0 0 14px rgba(231, 76, 60, 0.6);
}
.color-red .cursor2.hover {
  border: none;
  background: rgba(231, 76, 60, 0.1);
  box-shadow: 0 0 14px rgba(231, 76, 60, 0.6);
}

