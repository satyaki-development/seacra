{%- style -%}
  #shopify-section-{{ section.id }} {
    --section-padding-top: {{ section.settings.padding_top }}px;
    --section-padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

<div class="section--padding{% if section.settings.show_divider %} section--divider{% endif %}">
 <div class="contact page-width{% if section.blocks.size == 0 %} page-width--inner{% endif %}">
    {%- if section.blocks.size > 0 -%}
      <div class="grid">
        <div class="grid__item grid__item--two-third">
    {%- endif -%}
     
      <div class="title-wrapper{% if section.settings.heading == blank %} title-wrapper--no-heading{% endif %}">
       <center><{{ section.settings.heading_tag }} class="title {{ section.settings.heading_size }}">{{ section.settings.heading | escape }}</{{ section.settings.heading_tag }}>  
      </div>
   
      
      <form-state>
        {%- assign form_id = 'ContactForm-' | append: section.id -%}
        {%- form 'contact', id: form_id -%}
          {%- if form.posted_successfully? -%}
            <div class="form-status form-status-list form__message" tabindex="-1" autofocus>
              {% render 'icon', icon: 'success' %}
              {{ 'templates.contact.form.post_success' | t }}
            </div>
          {%- endif -%}
          <center><div class="contact__fields">
            <div class="field" style="position: relative;width: 61%; display: flex;">
              <input id="{{ form_id }}-name" class="field__input" autocomplete="name" type="text" name="contact[Your Name]" value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="Your Name"/>
              <label class="visually-hidden" for="{{ form_id }}-name">{{ 'templates.contact.form.name' | t }}</label>
            </div><br></div></center>
            <div class="field field--with-error" style="position: relative;width: 61%; display: flex;grid-column-gap: 2rem;-">
             <input
                id="{{ form_id }}-email"
                autocomplete="email"
                type="email"
                id="ContactForm-email-{{ section.id }}"
                class="field__input required{% if form.errors contains 'email' %} invalid{% endif %}"
                name="contact[Your Email]"
                spellcheck="false"
                autocapitalize="off"
                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                aria-required="true"
                {% if form.errors contains 'email' %}
                  aria-invalid="true"
                  aria-describedby="ContactForm-email-error-{{ section.id }}"
                {% endif %}
                placeholder="Your Email"
                required="required"
              />
              <label class="visually-hidden" for="{{ form_id }}-email">{{ 'templates.contact.form.email' | t }} <span aria-hidden="true">*</span></label>
              {%- if form.errors contains 'email' -%}
                <small id="ContactForm-email-error-{{ section.id }}">
                  <span class="form__message errors">
                    {% render 'icon', icon: 'error' %}
                    {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                  </span>
                </small>
              {%- endif -%}
            </div>
          </div>
          {%- if section.settings.show_phone -%}
           <div class="field" style="position: relative;width: 61%; display: flex;">
              <input id="{{ form_id }}-phone" type="tel" class="field__input" autocomplete="tel" name="contact[Phone No.]" pattern="[0-9\-]*" value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}" placeholder="Phone No."/>
              <label class="visually-hidden" for="{{ form_id }}-phone">{{ 'templates.contact.form.phone' | t }}</label>
            </div>
          {%- endif -%}
           <div class="field" style="position: relative;width: 61%; display: flex; grid-column-gap: 2rem;">
            <textarea
              id="{{ form_id }}-body"
              rows="10"
              class="text-area field__input"
              name="contact[Message]"
              placeholder="Message"
            >
              {{- form.body -}}
            </textarea>
            <label class="visually-hidden" for="{{ form_id }}-body">{{ 'templates.contact.form.comment' | t }}</label>
          </div>
          <div class="contact__button">
            <button type="submit" class="button">
              {{ 'templates.contact.form.send' | t }}
            </button>
          </div>
          </center> 
          {% comment %}
            Remove the following three lines of code to remove the note
            about being protected by Google's reCAPTCHA service.
            By removing it, the small reCAPTCHA widget will appear in the
            bottom right corner of the page.
          {% endcomment %}
          
        {%- endform -%}
      </form-state>

    {%- if section.blocks.size > 0 -%}
        </div>
        <div class="grid__item grid__item--one-third">
          <ul class="contact__list list-unstyled">
            {%- for block in section.blocks -%}
              <li {{ block.shopify_attributes }}>
                <p class="h3">{{ block.settings.heading | escape }}</p>

                {%- case block.type -%}
                  {%- when 'contact' -%}
                    {%- if block.settings.link != blank -%}
                      <a class="link" href="{{ block.settings.link }}">
                    {%- endif -%}
                      {{ block.settings.text | escape }}
                    {%- if block.settings.link != blank -%}
                      </a>
                    {%- endif -%}

                  {%- when 'media' -%}
                    <ul class="list-unstyled list-social" role="lsit">
                      {%- render 'social-icons' -%}
                    </ul>
                {%- endcase -%}
              </li>
            {%- endfor -%}
          </ul>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "contact-us",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_phone",
      "default": true,
      "label": "t:sections.contact-form.settings.show_phone.label"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "default": false,
      "label": "t:sections.all.show_divider.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.heading.label"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Get in touch",
      "label": "t:sections.all.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h3",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "select",
      "id": "heading_tag",
      "options": [
        {
          "value": "h1",
          "label": "t:sections.all.heading_tag.options__1.label"
        },
        {
          "value": "h2",
          "label": "t:sections.all.heading_tag.options__2.label"
        },
        {
          "value": "h3",
          "label": "t:sections.all.heading_tag.options__3.label"
        },
        {
          "value": "h4",
          "label": "t:sections.all.heading_tag.options__4.label"
        },
        {
          "value": "h5",
          "label": "t:sections.all.heading_tag.options__5.label"
        },
        {
          "value": "h6",
          "label": "t:sections.all.heading_tag.options__6.label"
        },
        {
          "value": "div",
          "label": "t:sections.all.heading_tag.options__7.label"
        },
        {
          "value": "span",
          "label": "t:sections.all.heading_tag.options__8.label"
        },
        {
          "value": "p",
          "label": "t:sections.all.heading_tag.options__9.label"
        }
      ],
      "default": "h2",
      "label": "t:sections.all.heading_tag.label",
      "info": "t:sections.all.heading_tag.info"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.header.content"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_top.unit",
      "label": "t:sections.all.padding.padding_top.label",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "t:sections.all.padding.padding_bottom.unit",
      "label": "t:sections.all.padding.padding_bottom.label",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "contact",
      "name": "contact-us",
      "limit": 4,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Customer service",
          "label": "t:sections.contact-form.blocks.contact.settings.heading.label"
        },
        {
          "type": "text",
          "id": "text",
          "default": "shop@yourstore.com",
          "label": "t:sections.contact-form.blocks.contact.settings.text.label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "t:sections.contact-form.blocks.contact.settings.link.label"
        }
      ]
    },
    {
      "type": "media",
      "name": "t:sections.contact-form.blocks.media.name",
      "limit": 1,
      "settings": [
        {
          "type": "paragraph",
          "content": "t:sections.contact-form.blocks.media.settings.paragraph.content"
        },
        {
          "type": "text",
          "id": "heading",
          "default": "Follow us",
          "label": "t:sections.contact-form.blocks.media.settings.heading.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "contact-us",
      "blocks": [
        {
          "type": "contact"
        },
        {
          "type": "media"
        }
      ]
    }
  ]
}
{% endschema %}
