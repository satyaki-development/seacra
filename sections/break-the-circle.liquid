{% stylesheet %}
  @keyframes move {
    0% {
      transform: rotate(-45deg) translateX(165px) rotate(45deg);
    }
    95% {
      width: 10px;
      height: 10px;
    }
    100% {
      transform: rotate(315deg) translate(165px) rotate(-315deg);
      width: 15px;
      height: 15px;
    }
  }
  @keyframes dotcreate {
    0% {
      transform: scale(0);
      opacity: 0;
      width: 0px;
      height: 0px;
    }
    100% {
      transform: scale(1);
      opacity: 1;
      width: 15px;
      height: 15px;
    }
  }
  @keyframes fadein {
    0% {
      opacity: 0;
    }
    80% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  
  @-webkit-keyframes fadein {
    0% {
      opacity: 0;
    }
    80% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
  @keyframes point_1 {
    0% {
      transform: rotate(-90deg) translateX(165px) rotate(90deg);
    }
    100% {
      transform: rotate(-45deg) translateX(165px) rotate(45deg);
    }
  }
  @keyframes point_2 {
    0% {
      transform: rotate(-45deg) translateX(165px) rotate(45deg);
    }
    100% {
      transform: rotate(0deg) translate(165px) rotate(0deg);
    }
  }
  @keyframes point_3 {
    0% {
      transform: rotate(0deg) translate(165px) rotate(0deg);
    }
    100% {
      transform: rotate(45deg) translateX(165px) rotate(-45deg);
    }
  }
  @keyframes point_4 {
    0% {
      transform: rotate(45deg) translateX(165px) rotate(-45deg);
    }
    100% {
      transform: rotate(90deg) translateX(165px) rotate(-90deg);
    }
  }
  @keyframes point_5 {
    0% {
      transform: rotate(-90deg) translateX(165px) rotate(90deg);
    }
    100% {
      transform: rotate(135deg) translate(165px) rotate(-135deg);
    }
  }
  @keyframes point_6 {
    0% {
      transform: rotate(-90deg) translateX(165px) rotate(90deg);
    }
    100% {
      transform: rotate(180deg) translate(165px) rotate(-180deg);
    }
  }
  @keyframes point_7 {
    0% {
      transform: rotate(-90deg) translateX(165px) rotate(90deg);
    }
    100% {
      transform: rotate(225deg) translate(165px) rotate(-225deg);
    }
  }
  @keyframes point_8 {
    0% {
      transform: rotate(-90deg) translateX(165px) rotate(90deg);
    }
    100% {
      transform: rotate(270deg) translate(165px) rotate(-270deg);
    }
  }
  
  @-webkit-keyframes waves {
    0% {
      transform: scale(1, 1);
      opacity: 1;
    }
    25% {
      transform: scale(1.5, 1.5);
      opacity: 0.25;
    }
    50% {
      transform: scale(2, 2);
      opacity: 0.15;
    }
    75% {
      transform: scale(2.5, 2.5);
      opacity: 0.05;
    }
    80% {
      transform: scale(3, 3);
      opacity: 0.005;
    }
    100% {
      transform: scale(3.5, 3.5);
      opacity: 0.0005;
    }
  }
  
  #dot {
    width: 15px;
    height: 15px;
    background: #cc4e61;
    border-radius: 50%;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: hidden;
    margin: auto;
    animation: move 1s forwards 1;
  }
  .point {
    margin: auto;
    opacity: 1;
    border-radius: 50%;
    background: #cc4e61;
    animation: dotcreate 0.5s 1 forwards ease-in-out;
    display: none;
  }
  .circle-container {
    position: relative;
    top: 190px;
    opacity: 1;
    animation: 1.5s ease 0s normal forwards 1 fadein;
    -webkit-animation: 1.5s ease 0s normal forwards 1 fadein;
  }
  .circle-container > * {
    display: block;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 6em;
    height: 6em;
  }
  .circle-container > *:nth-of-type(1) {
    animation: point_1 50ms 1 forwards;
  }
  .circle-container > *:nth-of-type(2) {
    animation: point_2 1s 1 forwards;
  }
  .circle-container > *:nth-of-type(3) {
    animation: point_3 1.2s 1 forwards;
  }
  .circle-container > *:nth-of-type(4) {
    animation: point_4 2s 1 forwards;
  }
  .circle-container > *:nth-of-type(5) {
    animation: point_5 2.3s 1 forwards;
  }
  .circle-container > *:nth-of-type(6) {
    animation: point_6 3s 1 forwards;
  }
  .circle-container > *:nth-of-type(7) {
    animation: point_7 3.4s 1 forwards;
  }
  .circle-container > *:nth-of-type(8) {
    animation: point_8 4s 1 forwards;
  }
  
