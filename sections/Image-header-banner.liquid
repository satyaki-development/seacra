<style>
  .container {
    margin-top: 15px;
  }
  
  /* READ MORE */
  .read-more-state {
    display: none;
  }
  
  .read-more-wrap {
    margin: 0;
    font-size: calc(0.75em + 1.15vw);
  }
  
  .read-more-target {
    opacity: 0;
    max-height: 0;
    font-size: 0;
    transition: 0.25s ease;
  }
  
  .read-more-state:checked ~ .read-more-target {
    opacity: 1;
    font-size: calc(0.5em + 1.15vw);;
    max-height: 999em;
  }
  
  .read-more-state ~ .read-more-trigger:before {
    content: "View more";
  }
  
  .read-more-state:checked ~ .read-more-trigger:before {
    content: "View less";
  }
  
  .read-more-trigger {
    font-weight: bold;
    cursor: pointer;
    display: inline-block;
    color: #ffff;
    font-size: 0.9em;
    text-decoration: underline;
  }

.parent {
    background-image: url('https://cdn.shopify.com/s/files/1/0669/6343/9927/files/Mask_group_4_d3ae1f71-821e-408c-92f8-31df023d2a29.png?v=1669300452&width=2000');
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
    height: 100%;
    display: grid;
    place-items: center;
}

.child {
  width: 40%;
  height: 25vh;
  position: absolute;
  bottom: 1%;
  background-color: rgba(255, 255, 255, 0.4);
  border-radius: 5px;
  color: #fff;
  font-family: system-ui, sans-serif;
  line-height: 1.5;
  max-width: 65%;
  padding: 1.5rem 2rem 3rem 2rem;
  text-align: center;
  overflow: hidden;
  -webkit-backdrop-filter: blur(37.6667px);
  -moz-backdrop-filter: blur(37.6667px);
  -o-backdrop-filter: blur(37.6667px);
  -ms--backdrop-filter: blur(37.6667px);
  background: rgba(217, 217, 217, 0.1);
  box-shadow: inset 37.6667px -37.6667px 37.6667px rgba(165, 165, 165, 0.1), inset -37.6667px 37.6667px 37.6667px rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(37.6667px);
   /* Note: backdrop-filter has minimal browser support */
  border-radius: 30px 0px 29px;
}
  .pink-it {
    color: #cc4e61;
  }
  .child-head h1 p {
    font-size: calc(0.4em + 0.35vw);
    line-height: 0.05vw;
  }
  .child-head {
    font-size: calc(0.3em + 0.35vw);
    margin-top: -4%;
  }
  .final-line {
    font-size: calc(0.75em + 0.25vw);
    padding: 0 9vw;
    margin-bottom: 2%;
  }
  .top-line {
     font-size: calc(0.75em + 0.5vw);
     margin: auto;
     padding: 0 7vw;
  }
  .mid-text {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    grid-gap: 2vw;
    margin: 0 -3.8%;
    font-size: calc(0.65em + 0.7vw);
    font-weight: 400;
  }
  .slideshow-stars {
      line-height: 1;
      margin-top: 2%;
  }
  .slideshow-author {
      line-height: 0;
  }
  .button {
      /* border: 1px solid; */
      padding: 2%;
      border-radius: 30vw;
      background: #cc4e61;
      cursor: pointer;
  }
  .mid-text:before,
  .mid-text:after {
    content: "";
    display: block;
    border-top: 2px solid currentColor;
  }
  @media (max-width: 767px) {
    .hidden-mobile {
      display: none;
    }
    .child-head {
      font-size: calc(0.3em + 1.35vw);
      margin-top: -6%;
    }
    .child-head h1 p {
      font-size: calc(0.4em + 1.75vw);
    }
    .child {
      width: 80%;
      height: 35vh;
      bottom: -20%;
      max-width: 80%;
    }
    .read-more-wrap p {
      line-height: 1.2;
      font-size: calc(0.5em + 1.15vw);
    }
    .text-2 {
      line-height: 1.2;
    }
    .slideshow-stars {
      color: #4a4a4a;
    }
    .slideshow-author {
      color: #4a4a4a;
    }
    .read-more-wrap {
      font-size: calc(0.75em + 1.15vw);
    }
    .slideshow-stars {
      margin-top: 3%;
    }
    .final-line {
      margin-bottom: 2%;
    }
    .read-more-trigger {
      color: #4a4a4a;
    }
  }
  @media (min-width: 767px) {
    .hidden-desktop {
      display: none;
    }
    .button {
      padding: 1%;
    }
  }
</style>
